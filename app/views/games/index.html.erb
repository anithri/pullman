<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Author</th>
    <th>Genres</th>
    <th>Mechanics</th>
    <th>Rating</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= game.author_id %></td>
        <td><%= game.genres %></td>
        <td><%= game.mechanics %></td>
        <td><%= game.rating %></td>
        <td><%= game.description %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
